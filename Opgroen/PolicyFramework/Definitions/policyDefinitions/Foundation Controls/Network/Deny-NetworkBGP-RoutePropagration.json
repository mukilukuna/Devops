{
    "name": "Deny-NetworkBGP-RoutePropagration",
    "properties": {
      "Description": "This policy enforce disableRoutePropegation set to true to make sure traffic is send to secure hub",
      "DisplayName": "Network: Enforce disableRoutePropegation for Route Table",
      "Mode": "All",
      "metadata": {
        "version": "1.0.0",
        "category": "Network"
      },
      "Parameters": {
        "disableBgpRoutePropagation": {
          "type": "Boolean",
          "metadata": {
            "displayName": "Disable BGP Route Propegation",
            "description": "This policy checks whether the disableBgpRoutePropagation is configured correctly. Should be true for secured hub deployements"
          },
          "defaultValue": true
        },
        "exemptSubscriptions": {
          "type": "Array",
          "metadata": {
            "displayName": "Exempt Subscription IDs",
            "description": "Any Subscription IDs included in this list will not have this Policy applied to them."
          },
          "defaultValue": []
        },
        "effect": {
          "type": "String",
          "metadata": {
            "displayName": "Effect",
            "description": "Enable or disable the execution of the policy"
          },
          "allowedValues": [
            "Audit",
            "Deny",
            "Disabled"
          ],
          "defaultValue": "Deny"
        }
      },
      "PolicyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.Network/routeTables"
            },
            {
              "notIn": "[parameters('exemptSubscriptions')]",
              "value": "[subscription().subscriptionId]"
            },
            {
              "field": "Microsoft.Network/routeTables/disableBgpRoutePropagation",
              "notEquals": "[parameters('disableBgpRoutePropagation')]"
            }
          ]
        },
        "then": {
          "effect": "[parameters('effect')]"
        }
      }
    }
  }
  