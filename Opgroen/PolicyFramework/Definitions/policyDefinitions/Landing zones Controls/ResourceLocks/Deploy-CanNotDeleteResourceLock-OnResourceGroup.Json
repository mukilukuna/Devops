{
    "name": "Deploy-CanNotDeleteResourceLock-OnResourceGroup",
    "properties": {
      "DisplayName": "Locks: Deploy CanNotDelete Resource Lock on Resource Groups",
      "Description": "Creates a resource lock at the resource group level for preventing resource deletion.",
      "Metadata": {
        "Version": "1.0.0",
        "Category": "Goverance"
      },
      "Mode": "All",
      "Parameters": {
        "exemptResourceGroups": {
          "type": "Array",
          "metadata": {
            "displayName": "Exempted Resource Group Names",
            "description": "Any Resource Group included in this list will not have this Policy applied to them."
          },
          "defaultValue": [
            "NetworkWatcherRG",
            "rg-infr-privatelinkzones-p-weu-01",
            "AzureBackupRG_westeurope_1",
            "VisualStudioOnline-06A9B11A0999421A8D114D8D51B06AB4",
            "rg-infr-alerting-p-weu-01"
          ]
        },
        "tagName": {
          "type": "String",
          "metadata": {
            "displayName": "Tag Name",
            "description": "Name of the tag"
          },
          "defaultValue": "environment"
        },
        "tagValue": {
          "type": "Array",
          "metadata": {
            "displayName": "Tag Value",
            "description": "List of tag values for the tag."
          },
          "defaultValue": [
            "Production",
            "Shared"
          ]
        }
      },
      "PolicyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.Resources/subscriptions/resourceGroups"
            },
            {
              "field": "[concat('tags[', parameters('tagName'), ']')]",
              "in": "[parameters('tagValue')]"
            },
            {
              "field": "name",
              "notIn": "[parameters('exemptResourceGroups')]"
            }
          ]
        },
        "then": {
          "effect": "deployIfNotExists",
          "details": {
            "type": "Microsoft.Authorization/locks",
            "existenceCondition": {
              "field": "Microsoft.Authorization/locks/level",
              "equals": "CanNotDelete"
            },
            "roleDefinitionIds": [
              "/providers/Microsoft.Authorization/roleDefinitions/8e3af657-a8ff-443c-a75c-2fe8c4bcb635"
            ],
            "deployment": {
              "properties": {
                "mode": "incremental",
                "template": {
                  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                  "contentVersion": "1.0.0.0",
                  "parameters": {
                    "location": {
                      "type": "string"
                    }
                  },
                  "resources": [
                    {
                      "type": "Microsoft.Authorization/locks",
                      "apiVersion": "2017-04-01",
                      "name": "iac-CanNotDelete",
                      "location": "[parameters('location')]",
                      "properties": {
                        "level": "CanNotDelete",
                        "notes": "Prevents deletion of resource group."
                      }
                    }
                  ]
                },
                "parameters": {
                  "location": {
                    "value": "[field('location')]"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  