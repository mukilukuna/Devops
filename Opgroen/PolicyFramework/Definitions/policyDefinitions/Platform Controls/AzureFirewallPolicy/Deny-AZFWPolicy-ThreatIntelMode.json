{
    "name": "Deny-AZFWPolicy-ThreatIntelMode",
    "properties": {
        "policyType": "Custom",
        "mode": "Indexed",
        "displayName": "Firewall Policy should enable Threat Intel Mode to monitor all inbound and outbound traffic flows",
        "description": "Enabling all Threat Intel Mode rules is recommanded to better identify known threats in the traffic flows.",
        "metadata": {
            "version": "1.0.0",
            "category": "Network"
        },
        "parameters": {
            "effect": {
                "type": "String",
                "metadata": {
                    "displayName": "Effect",
                    "description": "Enable or disable the execution of the policy"
                },
                "allowedValues": [
                    "Audit",
                    "Deny",
                    "Disabled"
                ],
                "defaultValue": "Deny"
            },
            "AllowedthreatIntelModes": {
                "type": "String",
                "metadata": {
                    "displayName": "The different modes of ThreatIntelMode",
                    "description": "Which modes are allowed"
                },
                "allowedValues": [
                    "Deny",
                    "Alert"
                ],
                "defaultValue": "Deny"
            }
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Network/firewallPolicies"
                    },
                    {
                        "field": "Microsoft.Network/firewallPolicies/threatIntelMode",
                        "notEquals": "[parameters('AllowedthreatIntelModes')]"
                    }
                ]
            },
            "then": {
                "effect": "[parameters('effect')]"
            }
        }
    }
}