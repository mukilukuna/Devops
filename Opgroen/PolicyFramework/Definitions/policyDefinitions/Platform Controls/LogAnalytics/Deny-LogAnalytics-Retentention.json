{
  "name": "Deny-LogAnalytics-Retentention",
  "properties": {
    "policyType": "Custom",
    "mode": "Indexed",
    "displayName": "Log Analytics retention in days should be configured to specified value",
    "description": "This policy defines the retention for Log Analytics workspaces in days",
    "metadata": {
      "version": "1.0.0",
      "category": "LogAnalytics"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "defaultValue": "Deny",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        }
      },
      "retentionInDays": {
        "type": "Integer",
        "defaultValue": 30,
        "metadata": {
          "displayName": "Retentention in days",
          "description": "Retention for Log Analytics workspace data in days"
        }
      }
    },
    "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.Operationalinsights/Workspaces"
            },
            {
              "field": "Microsoft.OperationalInsights/workspaces/retentionInDays",
              "notEquals": "[parameters('retentionInDays')]"
            }
          ]
        },
        "then": {
          "effect": "[parameters('effect')]"
        }
      }
    }
  }