{
    "name": "Deny-Vwan-deployment",
    "properties": {
      "Description": "This policy will prevent deploying a Virtual WAN in the sandbox environment",
      "DisplayName": "Network: Prevent deploying a Virtual WAN",
      "Mode": "All",
      "metadata": {
        "version": "1.0.0",
        "category": "Network"
      },
      "Parameters": {
        "effect": {
          "type": "String",
          "metadata": {
            "description": "The effect of the policy",
            "displayName": "Effect"
          },
          "allowedValues": [
            "Audit",
            "Deny",
            "Disabled"
          ],
          "defaultValue": "Deny"
        }
      },
      "PolicyRule": {
        "if": {
          "anyOf": [
            {
              "allOf": [
                {
                  "equals": "Microsoft.Network/virtualWans",
                  "field": "type"
                }
              ]
            }
          ]
        },
        "then": {
          "effect": "[parameters('effect')]"
        }
      }
    }
  }
  