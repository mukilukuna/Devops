import sqlite3

# Connect to the Chinook database
conn = sqlite3.connect('c:\Users\mukil\OneDrive\Documenten\VS Code\Database\chinook.db')

# Define a function to execute a query and fetch the results


def run_query(query):
    cursor = conn.execute(query)
    headers = [i[0] for i in cursor.description]
    rows = cursor.fetchall()
    return headers, rows


# Example query to fetch all the tracks from a specific album
album_id = 1
query = f"""
    SELECT TrackId, Name, Composer, Milliseconds
    FROM Track
    WHERE AlbumId = {album_id}
"""
headers, rows = run_query(query)

# Print the results
print(headers)
for row in rows:
    print(row)

# Close the database connection
conn.close()
